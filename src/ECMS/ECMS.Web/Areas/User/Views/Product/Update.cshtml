
@model ProductUpdateModel
@{
    ViewData["Title"] = "Update Product";
}

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-dark py-2"> Update Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form asp-action="Update" asp-controller="Product" asp-area="User" asp-antiforgery="true">
            <input type="hidden" asp-for="@Model.product.Id" />
            <div class="row">
                <div class="col-10">
                    <div class="border p-3">
                        @*<div asp-validation-summary="ModelOnly"></div>*@

                        <div class="form-floating py-2 col-12">
                            <input asp-for="@Model.product.Name" class="form-control border-0 shadow" />
                            <label asp-for="@Model.product.Name" class="ms-2"></label>
                            <span asp-validation-for="@Model.product.Name" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <label asp-for="@Model.product.Description" class="ms-2 text-muted"></label>
                            <textarea asp-for="@Model.product.Description" class="form-control border-0 shadow"></textarea>
                            <span asp-validation-for="@Model.product.Description" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="@Model.product.Price" class="form-control border-0 shadow" />
                            <label asp-for="@Model.product.Price" class="ms-2"></label>
                            <span asp-validation-for="@Model.product.Price" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="@Model.product.ImageUrl" class="form-control border-0 shadow" />
                            <label asp-for="@Model.product.ImageUrl" class="ms-2"></label>
                            <span asp-validation-for="@Model.product.ImageUrl" class="text-danger"></span>
                        </div>

                        <div class="row pt-2">
                            <div class="col-6 col-md-3">

                                <button type="submit" class="btn btn-primary form-control">Update</button> | <button asp-action="index" asp-controller="Product" asp-area="User" class="btn btn-primary form-control">Back</button>

                            </div>
                        </div>

                    </div>
                </div>

            </div>

        </form>
    </div>
</div>
